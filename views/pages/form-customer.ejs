<div class="container">
    <h4>Form Customer</h4>
    <hr>

    <form action="<%= targetRoute %> " method="post">
        Nama
        <input type="text" name="nama_customer"
        value="<%= nama_customer %> "
        class="form-control mb-2" required>

        Alamat
        <input type="text" 
        value="<%= alamat %> " name="alamat"
        class="form-control mb-2" required>

        Telepon
        <input type="text" 
        value="<%= telepon %> "name="telepon"
        class="form-control mb-2" required>

        <button type="submit" class="btn btn-success">
            Simpan
        </button>
    </form>
</div>